  },
  "dependencies": {
    "solana-privacy-scanner-core": "^0.7.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
