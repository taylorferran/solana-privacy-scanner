{
  "name": "solana-privacy-analyzer",
  "version": "0.1.0",
  "type": "module",
  "description": "Static code analyzer for detecting privacy vulnerabilities in Solana TypeScript/JavaScript code",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "solana-privacy-analyzer": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ci": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "solana",
    "privacy",
    "static-analysis",
    "code-analyzer",
    "security",
    "linter"
  ],
  "author": "Taylor Ferran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taylorferran/solana-privacy-scanner.git",
    "directory": "packages/code-analyzer"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^7.0.0",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
