{
  "name": "solana-privacy-scanner-core",
  "version": "0.1.4",
  "type": "module",
  "description": "Core scanning engine for Solana privacy analysis - analyze on-chain privacy exposure using heuristic-based risk detection",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ci": "vitest run"
  },
  "keywords": [
    "solana",
    "privacy",
    "blockchain",
    "analysis",
    "security",
    "privacy-analysis",
    "on-chain",
    "heuristics",
    "risk-detection",
    "wallet-analysis"
  ],
  "author": "Taylor Ferran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taylorferran/solana-privacy-scanner.git",
    "directory": "packages/core"
  },
  "homepage": "https://taylorferran.github.io/solana-privacy-scanner",
  "bugs": {
    "url": "https://github.com/taylorferran/solana-privacy-scanner/issues"
  },
  "dependencies": {
    "@solana/web3.js": "^1.95.8"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "esbuild": "^0.24.2"
  }
}
