{
  "name": "solana-privacy-devtools",
  "version": "0.1.1",
  "type": "module",
  "description": "Developer tools for Solana privacy: static code analysis, transaction simulation, test matchers, and CI/CD integration",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./analyzer": {
      "import": "./dist/analyzer/index.js",
      "types": "./dist/analyzer/index.d.ts"
    },
    "./simulator": {
      "import": "./dist/simulator/index.js",
      "types": "./dist/simulator/index.d.ts"
    },
    "./matchers": {
      "import": "./dist/matchers/index.js",
      "types": "./dist/matchers/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    }
  },
  "bin": {
    "privacy-scanner-init": "./dist/cli/init.js",
    "solana-privacy-devtools": "./dist/analyzer/cli.js"
  },
  "files": [
    "dist/**/*",
    "hooks/**/*",
    "github-action/**/*",
    "Dockerfile",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest"
  },
  "keywords": [
    "solana",
    "privacy",
    "static-analysis",
    "code-analyzer",
    "ci-cd",
    "testing",
    "github-actions",
    "simulator",
    "devtools",
    "linter"
  ],
  "author": "Taylor Ferran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taylorferran/solana-privacy-scanner.git",
    "directory": "packages/devtools"
  },
  "homepage": "https://sps.guide",
  "bugs": {
    "url": "https://github.com/taylorferran/solana-privacy-scanner/issues"
  },
  "dependencies": {
    "solana-privacy-scanner-core": "^0.4.0",
    "@solana/web3.js": "^1.95.8",
    "@typescript-eslint/typescript-estree": "^7.0.0",
    "vitest": "^2.1.9",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^10.3.10",
    "prompts": "^2.4.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "@types/node": "^22.10.2",
    "@types/prompts": "^2.4.9"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.95.0",
    "vitest": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": true
    }
  }
}
